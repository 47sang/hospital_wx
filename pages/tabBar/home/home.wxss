/* pages/tabBar/home/home.wxss */
/*
顶部搜索框
*/
.top {
  padding-bottom: 80rpx;
}

.search-bar {
  width: 80%;
  height: 55rpx;
  background: #fff;
  border: 1px solid grey;
  border-radius: 5px;
  padding: 5rpx;
  float: left;
  margin-left: 20rpx;

}

.search-bar icon {
  float: left;
}

.search-input {
  float: left;
  width: 90%;
  height: 100%;
  color: grey;
  font-size: 17px;
  padding-left: 5rpx;
}

.ring-img {
  float: right;
  width: 45rpx;
  height: 45rpx;
  margin: 13rpx 30rpx 0 0;
}

.slogan {
  display: flex;
  margin-top: 20rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.slogan-list {
  flex: 1;
  float: left;
  margin-left: 20rpx;
}

.slogan-img {
  width: 45rpx;
  height: 45rpx;
}

.img-nav {
  padding-bottom: 20rpx;
}
/*
图片按钮
*/
.register {
  float: left;
  width: 300rpx;
  height: 200rpx;
  border: 1px solid grey;
  border-radius: 10px;
  background-color: aqua;
  margin: 30rpx;
}

.consult {
  float: right;
  width: 300rpx;
  height: 200rpx;
  border: 1px solid grey;
  border-radius: 10px;
  background-color: aqua;
  margin: 30rpx;
}

/*
导航按钮
*/
.nav-list-img {
  width: 130rpx;
  height: 130rpx;
}

.nav-list {
  float: left;
  margin: 0 28rpx 20rpx 28rpx;
}

.nav-item {
  width: 130rpx;
}
/*
最头条
*/
.head {
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 20rpx;
  clear: both;
}
/*
轮播图
*/
.banner {
  clear: both;
  height: 200rpx;
  line-height: 150rpx;
}
/*
综合服务
*/
.general{
  margin: 20rpx;
}
.arction-title {
  font-size: 45rpx;
  font-weight: bold;
  color: grey;
  margin-bottom: 20rpx;
  float: left;
}
.more{
  float: right;
}
.general-list{
  clear: both;
}
.general-item {
  
  float: left;
  width: 120rpx;
  font-size: 30rpx;
  margin: 0 10rpx 20rpx 10rpx;
  text-align: center;
}

.general-img {
  width: 120rpx;
  height: 120rpx;
}
/*
科室导航
*/
.departments {
  clear: both;
  margin: 20rpx;
}
.departments-list{
  clear: both;
}
.departments-item {
  float: left;
  /* width: 140rpx; */
  font-size: 30rpx;
  overflow: hidden;
  text-align: center;
  margin: 0 20rpx 20rpx 20rpx;
}

.departments-text {
  width: 130rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
/*
健康自测小工具
*/
.tool {
  clear: both;
  padding-top: 20rpx;
}

.tool-img {
  width: 680rpx;
  height: 400rpx;
  border-radius: 20rpx;
  margin: auto 40rpx;
  background-color: brown;
}
/*
健康推送
*/
.healthPush{
  margin: 20rpx;
}
.healthPush-item {
  clear: both;
}

.healthPush-title {
  width: 100%;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 35rpx;
}

.healthPush-content {
  width: 100%;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 30rpx;
  line-height: 45rpx;
  color: grey;
}

.info {
  /* margin-left: 500rpx; */
  float: right; 
   /* clear: both;  */
}

.info image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  /* margin-top: 20rpx; */
}

.info text {
  font-size: 35rpx;
  color: grey;
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  /* line-height: 40rpx; */
}
.line{
  clear: both;
  border-bottom: 1rpx solid grey;
  margin-bottom: 25rpx;
}